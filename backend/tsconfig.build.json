{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/__mocks__/**/*",
    "src/tests/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}